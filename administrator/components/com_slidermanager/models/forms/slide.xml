<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_SLIDERMANAGER_FORM_LBL_SLIDE_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="created_by" type="createdby" default="" 
            label="COM_SLIDERMANAGER_FORM_LBL_SLIDE_CREATED_BY"
            description="COM_SLIDERMANAGER_FORM_DESC_SLIDE_CREATED_BY"  /> 

       <field name="title" type="text"
                
            label="COM_SLIDERMANAGER_FORM_LBL_SLIDE_TITLE"
            description="COM_SLIDERMANAGER_FORM_DESC_SLIDE_TITLE" 
                
                
                 required="true" 
            class="span6"
            filter="safehtml" /> 

       <field name="image" type="media"
                
            label="COM_SLIDERMANAGER_FORM_LBL_SLIDE_IMAGE"
            description="COM_SLIDERMANAGER_FORM_DESC_SLIDE_IMAGE" 
            class="span6"
                
                 required="true" 
            directory="/images/" /> 

       <field name="country" type="list"
                
            label="COM_SLIDERMANAGER_FORM_LBL_SLIDE_COUNTRY"
            description="COM_SLIDERMANAGER_FORM_DESC_SLIDE_COUNTRY" 
            required="true" 
            class="span6"
            multiple="true">
                <option value="Kenya">Kenya</option>
                <option value="Tanzania">Tanzania</option>
                <option value="Uganda">Uganda</option>
                <option value="Malawi">Malawi</option>
                <option value="All">All</option>
        </field> 

       <field name="langauge" type="list"
                
            label="COM_SLIDERMANAGER_FORM_LBL_SLIDE_LANGAUGE"
            description="COM_SLIDERMANAGER_FORM_DESC_SLIDE_LANGAUGE" 
                
                
                 required="true" 
            class="span6"
            multiple="false">
                <option value="English">English</option>
                <option value="Swahili">Swahili</option>
                <option value="All">All</option>
        </field> 

       <field name="link" type="menuitem"
            class="span6"
            label="COM_SLIDERMANAGER_FORM_LBL_SLIDE_LINK"
            description="COM_SLIDERMANAGER_FORM_DESC_SLIDE_LINK" 
                
                
                 required="true" 
            menu_published="1" /> 

       <field name="description" type="textarea"
                
            label="COM_SLIDERMANAGER_FORM_LBL_SLIDE_DESCRIPTION"
            description="COM_SLIDERMANAGER_FORM_DESC_SLIDE_DESCRIPTION" 
                
                
                 required="true" 
            class="span6"
            cols="100"
            rows="8"
            filter="safehtml" /> 

       <field name="date" type="timecreated" default="" 
            label="COM_SLIDERMANAGER_FORM_LBL_SLIDE_DATE"
            description="COM_SLIDERMANAGER_FORM_DESC_SLIDE_DATE"  /> 

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
    </field> 

                        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" />

	</fieldset>

</form>
